{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "baseUrl": "../..",
    "paths": {
      "@countdown-calender/api-client": ["packages/api-client/src"],
      "@countdown-calender/api-client/*": ["packages/api-client/src/*"],
      "@countdown-calender/state": ["packages/state/src"],
      "@countdown-calender/state/*": ["packages/state/src/*"],
      "@countdown-calender/domain": ["packages/domain/src"],
      "@countdown-calender/domain/*": ["packages/domain/src/*"],
      "@countdown-calender/ui": ["packages/ui/src"],
      "@countdown-calender/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["src"]
}
